<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/latomed"
        android:text="Work"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/tvTotalTaskValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latomed"
            android:text="1000 tasks"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latomed"
            android:text="@string/hyphen"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvCompletedTaskValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latomed"
            android:text="0 completed"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/lpiTaskProgress"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:indeterminate="true"
        android:max="100"
        android:paddingVertical="4dp"
        app:indicatorColor="@color/primarypurple"
        app:trackColor="@color/grey"
        app:trackCornerRadius="8dp"
        app:trackThickness="8dp" />


</LinearLayout>