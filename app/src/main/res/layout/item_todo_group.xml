<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/add_note_edittext_bg"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/latomed"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tvTotalTaskValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/grey_dark"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:text="@string/hyphen"
            android:textColor="@color/grey_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCompletedTaskValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:textColor="@color/grey_dark"
            android:textSize="14sp" />

    </LinearLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/lpiTaskProgress"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:max="100"
        android:paddingVertical="4dp"
        app:indicatorColor="@color/primarypurple"
        app:trackColor="@color/grey"
        app:trackCornerRadius="8dp"
        app:trackThickness="8dp" />


</LinearLayout>